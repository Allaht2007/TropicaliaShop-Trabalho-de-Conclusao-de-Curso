<div class="swiper-slide class-prod ">
   <div class="class-prod__desc" id="<%= classi.id_classificado %>">
      <img src="<%= classi.imagens %>" alt="Imagem do produto" draggable="false">
      <span class="pointer"><%= classi.nome_prod %></span>
      <span class="pointer">R$ <%= classi.preco_prod.toFixed(2) %></span>
      <span class="class-span__orn pointer">R$ <%= (classi.preco_prod + (classi.preco_prod * 0.1)).toFixed(2)  %></span>
   </div>
   <div class="line-center"></div>
   <div class="class-prod__btn">
      <div class="class-prod-btn__qnt">
            <button class="ic--round-minus pointer" onclick="mudaQuantidade(event,'<%= vetor%><%= classi.id_classificado %>', -1)"></button>
            <input type="number" id="<%= vetor%><%= classi.id_classificado %>" min="1" max="<%= classi.qnt_prod %>" value="1">
            <button class="ic--round-plus pointer" onclick="mudaQuantidade(event,'<%= vetor%><%= classi.id_classificado %>', 1)"></button>
      </div>
      <form action="/enviaCarrinho" method="post">
            <input type="hidden" name="idClass" value="<%= classi.id_classificado %>">
            <input type="hidden" name="qntClass" id="hidden-<%= vetor%><%= classi.id_classificado %>" value="0">
            <button type="submit" class="btn-comprar">Comprar</button>

      </form>
   </div>
</div>